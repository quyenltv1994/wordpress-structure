{% extends '../layouts/default.twig' %}

{% block htmlclass %}{{ parent() }} product-html{% endblock %}
{% block bodyclass %}{{ parent() }} product-body{% endblock %}

{% block title %}product - {{ parent() }}{% endblock %}

{% if is_ouragan_used is defined %}
    {% if is_ouragan_used %}
        {{ ouragan_include_once_js('public/assets/js/global/site.js', 5) }}
    {% endif %}
{% endif %}

{% block pre_content %}
    <!--
    Include this snippet only on the frontpage.
    Testing tool: https://search.google.com/structured-data/testing-tool
    Documentation: https://developers.google.com/search/docs/data-types/sitelinks-searchbox
    -->
    <script type='application/ld+json'>
        {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "@id": "http://my-website-url.com/#website",
            "url": "http://my-website-url.com/",
            "name": "Name of the website",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "http://my-website-url.com/?s={search_term_string}",
                "query-input": "required name=search_term_string"
            }
        }
    </script>

{% endblock %}

{% block content %}
    {% include '@blocks/product/product.twig' %}
    {% include '@blocks/information-general-product.twig' %}
    {% include '@blocks/list-product.twig' %}
    {% include '@blocks/services.twig' with {"services_classes": "ice"} %}
    {% include '@blocks/instagram.twig' %}
{% endblock %}